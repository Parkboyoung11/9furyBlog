<%= form_for @user, url: password_reset_path(params[:id]),
             html: {class: "form-signin"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <h1 class="h3 mb-3 font-weight-normal"><%= t "v_pr_edit.reset_pass" %></h1>
  <%= hidden_field_tag :email, @user.email %>
  <%= f.label :password, (t "v_pr_edit.your_pass"), class: "sr-only" %>
  <%= f.password_field :password, class: "form-control",
                       placeholder: (t "v_pr_edit.pass_p"), required: true  %>
  <%= f.label :password_confirmation, (t "v_pr_edit.passw_conf"),
              class: "sr-only" %>
  <%= f.password_field :password_confirmation, class: "form-control",
                       placeholder: (t "v_pr_edit.pass_conf_p"),
                       required: true  %>
  <%= f.submit (t "v_pr_edit.update_password"),
               class: "btn btn-lg btn-primary btn-block" %>
<% end %>
