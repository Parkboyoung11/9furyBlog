<header class="navbar navbar-fixed-top navbar-dark bg-dark">
  <div class="container">
    <%= link_to (t "v_l_h.my_blog"), home_path, id: "logo", class: "navbar-brand" %>
    <nav>
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
          <%= link_to (t "v_l_h.home"), home_path, class: "nav-item nav-link active" %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to (t "v_l_h.create_post"), publish_path, class: "nav-item nav-link fa fa-pencil" %>
          </li>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-item nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              <%= "#{current_user.name}" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-item">
                <%= link_to (t "v_l_h.profile"), current_user%>
              </li>
              <li class="dropdown-item">
                <%= link_to (t "v_l_h.setting"), edit_user_path(current_user) %>
              </li>
              <li class="dropdown-item">
                <%= link_to (t "v_l_h.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to (t "v_l_h.signin"), login_path, class: "nav-item nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
